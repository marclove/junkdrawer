{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/protect-notes.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "cargo check --manifest-path $CLAUDE_PROJECT_DIR/src-tauri/Cargo.toml --color never"
          },
          {
            "type": "command",
            "command": "pnpm run lint"
          }
        ]
      }
    ]
  }
}
