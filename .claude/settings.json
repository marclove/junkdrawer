{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/protect-notes.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "cargo check --manifest-path $CLAUDE_PROJECT_DIR/src-tauri/Cargo.toml --color never"
          },
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR && pnpm run lint > /tmp/lint_output.txt 2>&1; if [ $? -ne 0 ]; then echo '{\"decision\": \"block\", \"reason\": \"Linting failed:\\n'$(cat /tmp/lint_output.txt | sed 's/\"/\\\"/g' | tr '\n' ' ')'\"}'; else echo '{}'; fi"
          }
        ]
      }
    ]
  }
}
